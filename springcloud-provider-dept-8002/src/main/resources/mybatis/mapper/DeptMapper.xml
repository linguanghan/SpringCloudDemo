<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jd.springcloud.dao.DeptDao">

    <insert id="addDept" parameterType="Dept">
        insert into dept(`dept_name`, `db_source`)
        values (#{deptName}, DATABASE());
    </insert>

    <select id="queryById" resultType="com.jd.springcloud.pojo.Dept">
        select *
        from dept
        where `dept_id` = #{id};
    </select>

    <select id="queryAll" resultType="com.jd.springcloud.pojo.Dept">
        select *
        from dept;
    </select>
</mapper>